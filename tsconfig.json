{
	"compilerOptions": {
		// "noEmit": true,

		"target": "es2024",
		"module": "ESNext",
    	"moduleResolution": "Bundler",

		"lib": ["es2024"],
		"allowSyntheticDefaultImports": true,
		"types": ["node"],

		// "baseUrl": ".",
